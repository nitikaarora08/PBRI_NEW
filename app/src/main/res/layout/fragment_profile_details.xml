<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileDetails">
<ScrollView
    android:layout_width="match_parent"
    android:background="@drawable/transparent_white"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rel_layout_details2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_layout_details1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/llScanAadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentRight="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/btnScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="#CEC41405"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/aadhar_scan" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/qr"/>
            </RelativeLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="20dp"
                    android:background="@drawable/white_line"
                    android:padding="4dp"
                    android:hint="@string/farmername" />

            </android.support.design.widget.TextInputLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                >

            <ImageView android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/calender"/>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/dob"
                    android:layout_width="match_parent"
                    android:background="@drawable/white_line"
                    android:padding="4dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:focusableInTouchMode="false"
                    android:hint="@string/farmerdob" />

            </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                >

            <ImageView android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_black"/>
                <Spinner
                    android:id="@+id/spinner_gender"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/white_line"
                    android:padding="4dp"    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:textColorHint="#05ab9a"
                    android:layout_below="@+id/input_landholding"
                    />
            </RelativeLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                >

                <EditText
                    android:id="@+id/farmer_age"
                    android:layout_width="match_parent"
                    android:editable="false"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_line"
                    android:padding="4dp"     android:textSize="20dp"
                    android:singleLine="true"

                    android:inputType="number"
                    android:hint="@string/farmerage" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/aadhaar_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:background="@drawable/white_line"
                    android:padding="4dp"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:inputType="number"
                    android:hint="@string/adharno" />

            </android.support.design.widget.TextInputLayout>





            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/farmer_pincode"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"

                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:background="@drawable/white_line"
                    android:padding="4dp"
                    android:inputType="number"
                    android:maxLength="6"
                    android:hint="@string/farmerpincode" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                >

                <EditText
                    android:id="@+id/farmer_address"
                    android:layout_width="match_parent"
                    android:background="@drawable/white_line"
                    android:padding="4dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:hint="@string/farmeraddress" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                >

                <EditText
                    android:id="@+id/farmer_village"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/white_line"
                    android:padding="4dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="20dp"

                    android:hint="@string/villagename" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/mandal_name"
                    android:layout_width="match_parent"
                    android:background="@drawable/white_line"
                    android:padding="4dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="20dp"
                    android:hint="@string/mandalname" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/landmark"
                    android:layout_width="match_parent"
                    android:background="@drawable/white_line"
                    android:padding="4dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:singleLine="true"

                    android:hint="@string/landmark" />

            </android.support.design.widget.TextInputLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                >

            <ImageView android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_black"/>

                <Spinner
                    android:id="@+id/farmer_state"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_below="@+id/input_landholding"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_line"
                    android:padding="4dp"                    android:hint="Material Design Spinn"
                    android:textColorHint="#05ab9a" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                >

            <ImageView android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_black"/>



                <Spinner
                    android:id="@+id/farmer_city"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_below="@+id/input_landholding"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_line"
                    android:padding="4dp"
                    android:textColorHint="#05ab9a" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rel_layout_PersonnelDetails2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:layout_below="@+id/rel_layout_PersonnelDetails1"
                >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_emailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/farmer_emailid"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/white_line"
                        android:paddingRight="5dp"
                        android:inputType="textEmailAddress"
                        android:hint="@string/farmeremailid" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_emailid"
                    >

                    <EditText
                        android:id="@+id/farmer_mobileno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:background="@drawable/white_line"
                        android:paddingRight="5dp"  android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:inputType="number"
                        android:hint="@string/farmermobileno" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/farmer_wmobileno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:background="@drawable/white_line"
                        android:paddingRight="5dp"    android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:inputType="number"
                        android:hint="@string/farmer_wmobileno" />

                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    >

                <ImageView android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/arrow_black"/>




                    <Spinner
                        android:id="@+id/farmer_education"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/white_line"
                        android:paddingRight="5dp"
                        android:drawSelectorOnTop="true"
                        android:textColorHint="#05ab9a"
                        android:layout_below="@+id/input_landholding"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    >

                <ImageView android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/arrow_black"/>



                    <Spinner
                        android:id="@+id/caste_category"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_line"
                        android:paddingRight="5dp"
                        android:layout_marginTop="4dp"
                        android:hint="Material Design Spinn"
                        android:textColorHint="#05ab9a"
                        android:layout_below="@+id/input_landholding"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    >

                    <ImageView android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/arrow_black"/>


                    <Spinner
                        android:id="@+id/farmer_religion"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/white_line"
                        android:paddingRight="5dp"                        android:hint="Material Design Spinn"
                        android:textColorHint="#05ab9a"
                        android:layout_below="@+id/input_landholding" />

                </RelativeLayout>



            </LinearLayout>



            <RelativeLayout
                android:id="@+id/rel_layout_FamilyMembers2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="11dp"
                android:layout_below="@+id/rel_layout_FamilyMembers1"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">
                    <LinearLayout
                        android:id="@+id/llMale"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/transparent_white"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/male1"
                            android:padding="10dp"
                            android:background="@drawable/white_circle"
                            />
                        <Spinner
                            android:id="@+id/spinner_male"
                            android:layout_alignParentBottom="true"
                            android:layout_width="0dp"
                            android:background="@android:color/transparent"
                            android:layout_height="0dp"
                            />
                        <TextView
                            android:id="@+id/txtMale"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="2dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/black_square1"
                            android:layout_height="30dp"                        />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llFemale"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/transparent_white"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/female1"
                            android:padding="10dp"
                            android:background="@drawable/white_circle"
                            />
                        <Spinner
                            android:id="@+id/spinner_Female"
                            android:layout_alignParentBottom="true"
                            android:layout_width="0dp"
                            android:background="@android:color/transparent"
                            android:layout_height="0dp"
                            />
                        <TextView
                            android:id="@+id/txtFemale"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:padding="2dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/black_square1"
                            android:layout_height="30dp"                        />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llChildren"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/transparent_white"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/child"
                            android:padding="10dp"
                            android:background="@drawable/white_circle"
                            />
                        <Spinner
                            android:id="@+id/spinner_Children"
                            android:layout_alignParentBottom="true"
                            android:layout_width="0dp"
                            android:background="@android:color/transparent"
                            android:layout_height="0dp"
                            />
                        <TextView
                            android:id="@+id/txtChildren"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:padding="2dp"
                            android:background="@drawable/black_square1"
                            android:layout_height="30dp"
                            />
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</ScrollView>
</FrameLayout>