<RelativeLayout android:id="@+id/rel_layout_details2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:elevation="1dp"
        android:background="@color/white"
        android:weightSum="2">
        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundedbutton"
            android:text="@string/back"
            android:layout_marginRight="55dp"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/save_farmerdetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundedbutton"
            android:text="@string/submit"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:visibility="gone"
        android:clickable="true"
        android:background="#b6787878"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_height="280dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/date_bg">
            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_alignParentTop="true"
                android:saveEnabled="true"
                android:minHeight="10dp"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:elevation="2dp"
                />



            <Button
                android:id="@+id/btnOk"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_below="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:text="ok"/>


        </RelativeLayout>


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:background="@drawable/transparent_white"
            android:orientation="vertical"
            android:padding="10dp">


            <RelativeLayout
                android:id="@+id/llScanAadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btnScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="@string/aadhar_scan"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/qr" />
            </RelativeLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_line"
                    android:hint="@string/farmername"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/calender" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <EditText
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_line"
                        android:focusableInTouchMode="false"
                        android:hint="@string/farmerdob"

                        android:padding="4dp"
                        android:textSize="20dp" />

                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/arrow_black" />

                <Spinner
                    android:id="@+id/spinner_gender"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_below="@+id/input_landholding"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_line"
                    android:hint="Material Design Spinn"
                    android:padding="4dp"
                    android:textColorHint="#05ab9a" />
            </RelativeLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_dob"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/farmer_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_line"
                    android:editable="false"
                    android:hint="@string/farmerage"
                    android:inputType="number"
                    android:padding="4dp"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:textSize="20dp" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_aadhaar_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_age"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/aadhaar_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_line"
                    android:hint="@string/adharno"
                    android:inputType="number"
                    android:maxLength="12"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_aadhaar_no">

                <EditText
                    android:id="@+id/farmer_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:background="@drawable/white_line"
                    android:hint="@string/farmerpincode"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="4dp"
                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
               >

                <EditText
                    android:id="@+id/farmer_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_line"
                    android:layout_margin="2dp"
                    android:hint="@string/farmeraddress"
                    android:gravity="top"
                    android:singleLine="false"
                    android:padding="4dp"
                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/farmer_village"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_line"
                    android:hint="@string/villagename"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_village_name"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/mandal_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_line"
                    android:hint="@string/mandalname"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_landholding"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_line"
                    android:hint="@string/landmark"
                    android:padding="4dp"
                    android:singleLine="true"

                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/arrow_black" />

                <Spinner
                    android:id="@+id/farmer_state"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/input_landholding"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_line"
                    android:hint="Material Design Spinn"
                    android:padding="4dp"
                    android:textColorHint="#05ab9a" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/arrow_black" />


                <Spinner
                    android:id="@+id/farmer_city"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_below="@+id/input_landholding"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_line"
                    android:hint="Material Design Spinn"
                    android:padding="4dp"
                    android:textColorHint="#05ab9a" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rel_layout_PersonnelDetails2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_layout_PersonnelDetails1"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_emailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/farmer_emailid"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/white_line"
                        android:hint="@string/farmeremailid"
                        android:inputType="textEmailAddress"
                        android:paddingRight="5dp"
                        android:textSize="20dp" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_mobileno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/input_emailid">

                    <EditText
                        android:id="@+id/farmer_mobileno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/white_line"
                        android:hint="@string/farmermobileno"
                        android:inputType="number"
                        android:paddingRight="5dp"
                        android:editable="false"
                        android:textColor="@color/black"
                        android:enabled="false"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:textSize="20dp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_mobileno">

                    <EditText
                        android:id="@+id/farmer_wmobileno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/white_line"
                        android:maxLength="10"
                        android:hint="@string/farmer_wmobileno"
                        android:inputType="number"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textSize="20dp" />

                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/arrow_black" />


                    <Spinner
                        android:id="@+id/farmer_education"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_below="@+id/input_landholding"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_line"
                        android:drawSelectorOnTop="true"
                        android:hint="Material Design Spinn"
                        android:paddingRight="5dp"
                        android:textColorHint="#05ab9a" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/arrow_black" />


                    <Spinner
                        android:id="@+id/caste_category"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_below="@+id/input_landholding"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_line"
                        android:hint="Material Design Spinn"
                        android:paddingRight="5dp"
                        android:textColorHint="#05ab9a" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/arrow_black" />


                    <Spinner
                        android:id="@+id/farmer_religion"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_below="@+id/input_landholding"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_line"
                        android:hint="Material Design Spinn"
                        android:paddingRight="5dp"
                        android:textColorHint="#05ab9a" />

                </RelativeLayout>


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rel_layout_FamilyMembers2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_layout_FamilyMembers1"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="71dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/llMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/transparent_white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/white_circle"
                            android:padding="10dp"
                            android:src="@drawable/male1" />

                        <Spinner
                            android:id="@+id/spinner_male"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_alignParentBottom="true"
                            android:background="@android:color/transparent" />

                        <TextView
                            android:id="@+id/txtMale"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:text="@string/select"
                            android:gravity="center"
                            android:padding="2dp"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/transparent_white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/white_circle"
                            android:padding="10dp"
                            android:src="@drawable/female1" />

                        <Spinner
                            android:id="@+id/spinner_Female"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_alignParentBottom="true"
                            android:background="@android:color/transparent" />

                        <TextView
                            android:id="@+id/txtFemale"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:text="@string/select"
                            android:gravity="center"
                            android:padding="2dp"
                            android:textSize="18dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llChildren"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/transparent_white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/white_circle"
                            android:padding="10dp"
                            android:src="@drawable/child" />

                        <Spinner
                            android:id="@+id/spinner_Children"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_alignParentBottom="true"
                            android:background="@android:color/transparent" />

                        <TextView
                            android:id="@+id/txtChildren"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:text="@string/select"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:padding="2dp"
                            android:textSize="18dp" />
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>